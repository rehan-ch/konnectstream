<section class="vh-80 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "text-center") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label :first_name, class: 'form-label' %>
                    <%= f.text_field :first_name, autofocus: true, class: 'form-control form-control-lg' %>
                  </div>

                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <%= f.label :last_name, class: 'form-label' %>
                    <%= f.text_field :last_name, autofocus: true, class: 'form-control form-control-lg' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <%= f.label :email, class: 'form-label' %>
                    <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', autocomplete: 'email' %>
                  </div>
                </div>
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <%= f.label :phone_no, class: 'form-label' %>
                    <%= f.text_field :phone_no, autofocus: true, class: 'form-control form-control-lg' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <%= f.label :password, class: 'form-label' %>
                    <%= f.password_field :password, autofocus: true, class: 'form-control form-control-lg', autocomplete: 'email' %>
                  </div>
                </div>
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <%= f.label :password_confirmation, class: 'form-label' %>
                    <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control form-control-lg' %>
                  </div>
                </div>
              </div>
              <div class="mb-4">
                <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg' %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>